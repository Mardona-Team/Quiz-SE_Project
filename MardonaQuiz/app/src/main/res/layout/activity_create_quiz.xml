<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mardonaquiz.mardona.CreateQuizActivity"
    android:id="@+id/Create_Quiz">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/CreateTitle"
    android:textColor="#ff000000"
    android:textSize="30sp"
    android:layout_margin="10sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"

        android:hint="@string/QuizTitle"
        android:textColorHint="@android:color/darker_gray"


        android:textSize="20sp"
        android:layout_margin="10sp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="@string/QuizDesc"
        android:textColorHint="@android:color/darker_gray"


        android:textSize="20sp"
        android:layout_margin="10sp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"

        android:hint="@string/Quizsubj"
        android:textColorHint="@android:color/darker_gray"


        android:textSize="20sp"
        android:layout_margin="10sp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:hint="@string/QuizYear"
        android:textColorHint="@android:color/darker_gray"


        android:textSize="20sp"
        android:layout_margin="10sp" />



            <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
                android:hint="@string/NumQues"
                android:textColorHint="@android:color/darker_gray"

        android:id="@+id/editText4"

        android:textSize="20sp"
                android:layout_margin="10sp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText5"
        android:hint="@string/FinalMark"
        android:textColorHint="@android:color/darker_gray"


        android:textSize="20sp"
        android:layout_margin="10sp" />

            <Button
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/button3"
                android:textSize="26sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right" />
        </LinearLayout>
</ScrollView>


</RelativeLayout>
